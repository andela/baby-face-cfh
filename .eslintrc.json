{
  "root": true,
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "document": true,
    "localStorage": true,
    "$": true,
    "window": true,
    "angular": true,
    "AOS": true,
    "Firebase": true
  },
  "rules": {
    "max-len": [ 1, 80, 2],
    "one-var": 0,
    "func-names": ["error", "never"],
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "import/no-dynamic-require" : 0,
    "no-console": ["error", { "allow": ["log"] }],
    "curly": ["error", "multi-line"],
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "no-shadow": ["error", { "allow": ["req", "res", "err"] }],
    "no-underscore-dangle": [2, {
      "allow": ["_json", "_id", "_data", "_this", "_findPlayerIndexBySocket"],
      "allowAfterThis": true
      }],
    "valid-jsdoc": ["error", {
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": false,
      "requireReturnDescription": true
    }],
    "require-jsdoc": ["error", {
        "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true 
        }
    }]
  }
}
